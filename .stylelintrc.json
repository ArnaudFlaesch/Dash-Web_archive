{
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss", "stylelint-config-prettier-scss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind"]
      }
    ],
    "selector-id-pattern": "^[a-z][a-zA-Z0-9]+$",
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
    "indentation": 2
  }
}
